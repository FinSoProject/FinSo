{% extends "AccueilBundle:Template:template.html.twig" %}

{% block corp%} 

<div class="col-md-8">
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<center><h5 class="panel-heading alert-danger">Connexion</h5></center>

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">

    
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    
    <div class="form-group">

    <label for="username" class="col-sm-4 control-label">{{ 'Identifiant'|trans }}</label>
    
    <div class="col-sm-6">
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"  />
    </div>
    </div>

    <div class="form-group">
    <label for="password" class="col-sm-4 control-label">{{ 'Mots de passe'|trans }}</label>
    <div class="col-sm-6">
    <input type="password" id="password" name="_password" required="required" class="form-control" />
    </div>
    </div>
   
    <div class="form-group">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-6">
    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
    <label for="remember_me">{{ 'se souvenir de moi'|trans }}</label>
    </div>
    </div>

    <div class="form-group">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-6">
    <input type="submit" id="_submit" name="_submit" value="{{ 'Se connecter'|trans }}" class="btn btn-primary"/>
    </div>
    </div>
</form>
</div>
{% endblock %}
